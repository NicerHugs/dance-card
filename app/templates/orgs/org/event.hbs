{{#if loggedIn}}
  {{!-- use able to manage this event --}}

  {{#if edit.eventHeader}}
    <div class="event-header-editing">
      <span><a href="#" class="save-edit-event-header">save changes</a></span>
      <span><a href="#" class="cancel-edit-event-header">cancel</a></span>

      <label name="name">Event Name</label>
        <input name="name" class="event-name-input" type="text">

      <label name="event-type">Event Type</label>
        <select class="event-type-input" name="event-type">
          <option value="contra-dance" selected>Contra Dance</option>
          <option value="advanced-contra-dance">Advanced Contra Dance</option>
          <option value="contra-workshop">Contra Workshop</option>
          <option value="waltz">Waltz Dance</option>
          <option value="waltz-workshop">Waltz Workshop</option>
          <option value="square-dance">Square Dance</option>
          <option value="dance-weekend">Dance Weekend</option>
          <option value="caller-workshop">Caller Workshop</option>
        </select>

      {{#if event.recurring}}
        <p>
          This event occurs once a
          <input name="chooseRpt" type="radio" value="true"><label name="chooseRpt">month</label>
          <input name="chooseRpt" type="radio" value="false"><label name="chooseRpt">week</label>
          on
          {{#if event.monthlyRpt}}
            <select name="monthlyRpt" class="monthly-option-input">
              <option value="first">the first</option>
              <option value="second">the second</option>
              <option value="third">the third</option>
              <option value="fourth">the fourth</option>
              <option value="last">the last</option>
            </select>
          {{/if}}
          <select class="weekly-option-input">
            <option value="1">Monday</option>
            <option value="2">Tuesday</option>
            <option value="3">Wednesday</option>
            <option value="4">Thursday</option>
            <option value="5">Friday</option>
            <option value="6">Saturday</option>
            <option value="0">Sunday</option>
          </select>
        </p>

      {{else}}
        <label name="start-date">Start date</label>
          <input name="start-date" class="event-start-date-input" type="date">

        <label name="multi-day">Multi-day Event</label>
          <input name="multi-day"class="multi-day-input" type="checkbox">
          <div class="multi-day">
        </div>
      {{/if}}

      <label name="start-time">Start time</label>
        <input name="start-time" class="event-start-time-input" type="time">

      <label name="end-time">End time</label>
        <input name="end-time" class="event-end-time-input" type="time">

    </div>
  {{else}}
    <div class="event-header">
      <span><a href="#" class="edit-event-header">edit</a></span>
      <h2>{{event.name}}</h2>
        <p>Type: {{event.type}}</p>
        {{#if event.multiDay}}<p>This is a multi-day event</p>{{/if}}
        <p>Start Date: {{event.startDate.iso}}</p>
        <p>End Date: {{event.endDate.iso}}</p>
        {{#if event.recurring}}</p>This event repeats every {{event.monthlyRpt}} {{event.weeklyRptName}}</p>{{/if}}
        <p>Start Time: {{event.startTime}}</p>
        <p>End Time: {{event.endTime}}</p>
    </div>
  {{/if}}

  {{#if edit.eventInfo}}
    <div class="event-info-editing">
      <span><a href="#" class="save-edit-event-info">save changes</a></span>
      <span><a href="#" class="cancel-edit-event-info">cancel</a></span>
      <h3>Event Info</h3>
      <label name="event-price">Price</label>
        <input type="text" class="price-input" name="event-price" placeholder="price">
      {{#if event.recurring}}
        To edit band and caller info, please edit the individual event
      {{else}}
        <label name="band-name">Band Name</label>
          <input type="text" class="band-name-input" name="band-name" placeholder="band name">
        <label name="musicians">Musicians</label>
          <textarea name="musicians" class="musicians-input" rows="8" cols="10" placeholder="musicians"></textarea>
        <label name="caller">Caller</label>
          <input type="text" class="caller-input" name="caller" placeholder="caller">
      {{/if}}
      <label name="beginner-friendly">Beginner Friendly</label>
        <input type="checkbox" class="beginner" name="beginner-friendly">
      <label name="workshop-included">Workshop Included</label>
        <input type="checkbox" class="workshop-incl" name="workshop-included">
      <label name="notes">Notes</label>
        <textarea name="note" class="notes-input" placeholder="notes"></textarea>
    </div>
  {{else}}
    <div class="event-info">
      <span><a href="#" class="edit-event-info">edit</a></span>
      <h3>Event Info</h3>
      <p>Cost: ${{event.price}}</p>
      {{#unless event.recurring}}
        <p>
          Band: {{#if event.band}}{{event.band}}{{else}}TBA{{/if}}
        </p>
        <p>
          Musicians: {{#if event.musicians}}{{event.musicians}}{{else}}TBA{{/if}}
        </p>
        <p>
          Caller: {{#if event.caller}}{{event.caller}}{{else}}TBA{{/if}}
        </p>
      {{/unless}}
      <p>
        This {{event.type}} is
        {{#unless event.beginnerFrdly}} NOT {{/unless}}
        beginner friendly
        {{#if event.workshopIncl}} and includes a workshop.{{/if}}
      </p>
      {{#if event.notes}}
        <p>
          Organizer notes: {{event.notes}}
        </p>
      {{/if}}
    </div>
  {{/if}}

  {{#unless event.recurring}}
    {{#if edit.venueInfo}}
      <divclass="venue-info-editing">
        <span><a href="#" class="save-edit-venue-info">save changes</a></span>
        <span><a href="#" class="cancel-edit-venue-info">cancel</a></span>
        <h3>Venue Info</h3>
        <label name="venue-name">Venue Name</label>
          <input name="venue-name" class="venue-name-input" type="text" placeholder="venue name">
        <label name="address">Venue Address</label>
          <input name="address" class="event-address-input" type="text" placeholder="venue address">
        <label name="zipcode">Venue Zipcode</label>
          <input name="zipcode" class="event-zipcode-input"type="text" placeholder="venue zipcode">
      </div>
    {{else}}
    <div class="venue-info">
      <span><a href="#" class="edit-venue-info">edit</a></span>
      <h3>Venue Info</h3>
      <h4>
        {{event.venue.name}}
      </h4>
      <p>
        {{event.venue.fullAddress}}
      </p>
    </div>
    {{/if}}
  {{/unless}}

{{else}}

  {{#if event.recurring}}
  sorry, you don't have permission to manage this event

  {{else}}
  {{!-- user cannot manage this event, only view --}}
    <h2>{{event.name}}</h2>
    <p>
      {{#if event.multiDay}}From {{/if}}
      {{event.startDate.iso}}
      {{#if event.multiDay}} to {{event.endDate.iso}}{{/if}}
      {{#if event.weeklyRptName}} and every {{event.weeklyRptName}}{{/if}} from
      {{event.startTime}}-{{event.endTime}}
    </p>
    <p>by <a href="#/orgs/{{eventOrg.urlId}}">{{eventOrg.orgName}}</a></p>

    <div class="event-info">
      <h3>Event Info</h3>
      <p>Cost: ${{event.price}}</p>
      <p>
        Band: {{#if event.band}}{{event.band}}{{else}}TBA{{/if}}
      </p>
      {{#if event.musicians}}
        <p>
          Musicians: {{event.musicians}}
        </p>
      {{/if}}
      <p>
        Caller: {{#if event.caller}}{{event.caller}}{{else}}TBA{{/if}}
      </p>
      <p>
        This {{event.type}} is
        {{#unless event.beginnerFrdly}} NOT {{/unless}}
        beginner friendly
        {{#if event.workshopIncl}} and includes a workshop.{{/if}}
      </p>
      {{#if event.notes}}
        <p>
          Organizer notes: {{event.notes}}
        </p>
      {{/if}}
    </div>

    <div class="venue-info">
      <h3>Venue Info</h3>
      <h4>
        {{event.venue.name}}
      </h4>
      <p>
        {{event.venue.fullAddress}}
      </p>
    </div>

  {{/if}}

{{/if}}
