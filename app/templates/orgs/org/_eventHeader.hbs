{{#if edit.eventHeader}}
  <div class="event-header-editing">
    <span><a href="#" class="save-edit-event-header">save changes</a></span>
    <span><a href="#" class="cancel-edit-event-header">cancel</a></span>

    <label name="name">Event Name</label>
      <input name="name" class="event-name-input" type="text">

    <label name="event-type">Event Type</label>
      <select class="event-type-input" name="event-type">
        <option value="contra-dance" selected>Contra Dance</option>
        <option value="advanced-contra-dance">Advanced Contra Dance</option>
        <option value="contra-workshop">Contra Workshop</option>
        <option value="waltz">Waltz Dance</option>
        <option value="waltz-workshop">Waltz Workshop</option>
        <option value="square-dance">Square Dance</option>
        <option value="dance-weekend">Dance Weekend</option>
        <option value="caller-workshop">Caller Workshop</option>
      </select>

    {{#if event.recurring}}
      <p>
        This event occurs once a
        <input name="chooseRpt" type="radio" value="true"><label name="chooseRpt">month</label>
        <input name="chooseRpt" type="radio" value="false"><label name="chooseRpt">week</label>
        on
        {{#if event.monthlyRpt}}
          <select name="monthlyRpt" class="monthly-option-input">
            <option value="first">the first</option>
            <option value="second">the second</option>
            <option value="third">the third</option>
            <option value="fourth">the fourth</option>
            <option value="last">the last</option>
          </select>
        {{/if}}
        <select class="weekly-option-input">
          <option value="1">Monday</option>
          <option value="2">Tuesday</option>
          <option value="3">Wednesday</option>
          <option value="4">Thursday</option>
          <option value="5">Friday</option>
          <option value="6">Saturday</option>
          <option value="0">Sunday</option>
        </select>
      </p>

    {{else}}
      <label name="start-date">Start date</label>
        <input name="start-date" class="event-start-date-input" type="date">

      <label name="multi-day">Multi-day Event</label>
        <input name="multi-day"class="multi-day-input" type="checkbox">
        <div class="multi-day">
      </div>
    {{/if}}

    <label name="start-time">Start time</label>
      <input name="start-time" class="event-start-time-input" type="time">

    <label name="end-time">End time</label>
      <input name="end-time" class="event-end-time-input" type="time">

  </div>
{{else}}
  <div class="event-header-viewing">
    <span><a href="#" class="edit-event-header">edit</a></span>
    <h2>{{event.name}}</h2>
      <p>Type: {{event.type}}</p>
      {{#if event.multiDay}}<p>This is a multi-day event</p>{{/if}}
      <p>Start Date: {{event.startDate.iso}}</p>
      <p>End Date: {{event.endDate.iso}}</p>
      {{#if event.recurring}}</p>This event repeats every {{event.monthlyRpt}} {{event.weeklyRptName}}</p>{{/if}}
      <p>Start Time: {{event.startTime}}</p>
      <p>End Time: {{event.endTime}}</p>
  </div>
{{/if}}
